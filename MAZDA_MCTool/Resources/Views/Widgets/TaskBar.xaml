<UserControl x:Class="MAZDA_MCTool.Resources.Views.Widgets.TaskBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enum="clr-namespace:MAZDA_MCTool.Resources.Enums"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="600">
  <StackPanel Background="#e5e5e5" Orientation="Horizontal">
    <TextBlock Width="20" FontSize="16" Margin="4 0" Background="Transparent" VerticalAlignment="Center"
               TextAlignment="Center" TextElement.FontFamily="Segoe MDL2 Assets"
               Text="{x:Static enum:SegoeMDL2.列表}" />
    <TextBlock x:Name="TipText" VerticalAlignment="Center" Text="开发中..." />
  </StackPanel>
</UserControl>
