<UserControl x:Class="马自达MC同步器.Resources.Views.Widgets.ModListBox"
             x:Name="Me"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:马自达MC同步器.Resources.Views.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.Resources>
    <BitmapImage x:Key="DefaultImage" UriSource="pack://application:,,,/Resources/Images/Icons/NoIcon.png" />
  </UserControl.Resources>
  <Border CornerRadius="5" BorderBrush="#ededed">
    <ListBox ItemsSource="{Binding ItemsSource,ElementName=Me}"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid Margin="4" Height="36" MaxWidth="{Binding ActualWidth,ElementName=Me}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="40"/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="34" Height="34">
              <Border.Clip>
                <RectangleGeometry Rect="0,0,34,34" RadiusX="6" RadiusY="6" />
              </Border.Clip>
              <!--<Image Source="{Binding Logo,FallbackValue={StaticResource DefaultImage}}"/>-->
              <Image Source="{StaticResource DefaultImage}"/>
            </Border>
            <StackPanel Grid.Column="1" Margin="8 0 0 0">
              <TextBlock>
                <Run Text="{Binding Name}"/>
                <Run Text="{Binding Version,StringFormat={} | {0}}" Foreground="#adadad"/>
              </TextBlock>
              <TextBlock Margin="0 4" Height="20"
                         TextTrimming="CharacterEllipsis"
                         Text="{Binding Description}"
                         ToolTip="{Binding Description}"/>
            </StackPanel>
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Border>
</UserControl>
